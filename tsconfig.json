{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "target": "es2020"
  },
  "exclude": ["scripts", "actions"],
  "files": ["hardhat.config.js"],
  "include": ["**/*.ts", "hardhat.config.js"]
}
